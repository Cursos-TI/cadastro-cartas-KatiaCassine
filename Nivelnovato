#include <stdio.h>
#include <string.h>

// 
struct Carta {
    char estado[3];
    char codigo[4];
    char nomeCidade[50];
    int populacao;
    float area;
    float pib;
    int numPontosTuristicos;
    float densidadePopulacional;
    float pibPerCapita;
};

int main() {
    // Declaração das cartas 
    struct Carta carta1 = {"SP", "A01", "São Paulo", 12300000, 1521.11, 699000000000, 30, 0, 0};
    struct Carta carta2 = {"RJ", "A02", "Rio de Janeiro", 6748000, 1182.30, 462000000000, 25, 0, 0};
    struct Carta carta3 = {"MG", "A03", "Belo Horizonte", 2523000, 331.40, 112000000000, 18, 0, 0};
    struct Carta carta4 = {"RS", "A04", "Porto Alegre", 1488000, 496.82, 85000000000, 15, 0, 0};
    struct Carta carta5 = {"PR", "B01", "Curitiba", 1966000, 435.04, 105000000000, 20, 0, 0};
    struct Carta carta6 = {"BA", "B02", "Salvador", 2887000, 692.81, 97000000000, 22, 0, 0};
    struct Carta carta7 = {"PE", "B03", "Recife", 1653000, 218.84, 88000000000, 17, 0, 0};
    struct Carta carta8 = {"CE", "B04", "Fortaleza", 2687000, 314.93, 98000000000, 19, 0, 0};

    // Selecionar duas cartas para a comparação
    struct Carta c1 = carta1;
    struct Carta c2 = carta2;

    // Cálculos automáticos
    c1.densidadePopulacional = c1.populacao / c1.area;
    c2.densidadePopulacional = c2.populacao / c2.area;

    c1.pibPerCapita = c1.pib / c1.populacao;
    c2.pibPerCapita = c2.pib / c2.populacao;

    // Exibição dos dados iniciais
    printf("==============================================================\n");
    printf("              SUPER TRUNFO - NIVEL NOVATO (PIB)\n");
    printf("==============================================================\n\n");

    printf("Carta 1: %s (%s)\n", c1.nomeCidade, c1.estado);
    printf("População: %d habitantes\n", c1.populacao);
    printf("Área: %.2f km²\n", c1.area);
    printf("PIB: %.2f bilhões\n", c1.pib / 1000000000);
    printf("Densidade Populacional: %.2f hab/km²\n", c1.densidadePopulacional);
    printf("PIB per Capita: %.2f\n\n", c1.pibPerCapita);

    printf("Carta 2: %s (%s)\n", c2.nomeCidade, c2.estado);
    printf("População: %d habitantes\n", c2.populacao);
    printf("Área: %.2f km²\n", c2.area);
    printf("PIB: %.2f bilhões\n", c2.pib / 1000000000);
    printf("Densidade Populacional: %.2f hab/km²\n", c2.densidadePopulacional);
    printf("PIB per Capita: %.2f\n", c2.pibPerCapita);

    printf("\n--------------------------------------------------------------\n");
    printf("Comparação de cartas (Atributo: PIB)\n");
    printf("--------------------------------------------------------------\n");

    // Comparação pelo atributo PIB (if / if-else)
    if (c1.pib > c2.pib) {
        printf("Carta 1 - %s venceu!\n", c1.nomeCidade);
        printf("PIB de %s: %.2f bilhões\n", c1.nomeCidade, c1.pib / 1000000000);
        printf("PIB de %s: %.2f bilhões\n", c2.nomeCidade, c2.pib / 1000000000);
    } else if (c2.pib > c1.pib) {
        printf("Carta 2 - %s venceu!\n", c2.nomeCidade);
        printf("PIB de %s: %.2f bilhões\n", c1.nomeCidade, c1.pib / 1000000000);
        printf("PIB de %s: %.2f bilhões\n", c2.nomeCidade, c2.pib / 1000000000);
    } else {
        printf("Empate! Ambos possuem o mesmo PIB.\n");
        printf("PIB: %.2f bilhões\n", c1.pib / 1000000000);
    }

    printf("==============================================================\n");
    printf("Fim da comparação - TechNova Games © 2025\n");
    printf("==============================================================\n");

    return 0;
} 
